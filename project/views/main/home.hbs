{{#each posts}}
<div class="card">
{{>postPartial post=this user=currentUser}}


{{#if (ifEquals author._id ../currentUser._id)}}
    <form action="posts/{{_id}}/delete" method="POST" id="delete-form">
      <button type="submit">🗑</button>
    </form>
  {{/if}}


  <form action="/{{_id}}/comment" method="POST">
    <label> Deja un comentario:
      <textarea type="text" name="content"> </textarea>
    </label>
    <button type="submit"> Publica tu comentario! 📝</button>
  </form>


</div>
<br>

{{/each}}