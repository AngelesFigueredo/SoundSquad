{{#ifIsTheSame currentUser._id id}}
<a href="/new-playlist">Crear nueva playlist</a>

{{#unless ownedPlaylists}}
<p>No tienes ninguna playlist todav√≠a, crea la primera!</p>
{{/unless}}


{{#if ownedPlaylists}}
<h2>Tus playlists:</h2>
{{#each ownedPlaylists}}
<a href="/playlist-details/{{this._id}}">{{>playlistPartial this}}</a>
{{/each}}
{{/if}}

{{#if followedPlaylists}}
<h2>Playlists de otros usuarios:</h2>
{{#each followedPlaylists}}
<a href="/playlist-details/{{this._id}}">{{>playlistPartial this}}</a>
{{/each}}
{{/if}}

{{else}}
{{#if ownedPlaylists}}
<h2>Playlists de {{user.username}}:</h2>
{{#each ownedPlaylists}}
<a href="/playlist-details/{{this._id}}">{{>playlistPartial this}}</a>
{{/each}}
{{/if}}

{{#if followedPlaylists}}
<h2>Playlists seguidas por {{user.username}}:</h2>
{{#each followedPlaylists}}
<a href="/playlist-details/{{this._id}}">{{>playlistPartial this}}</a>
{{/each}}
{{/if}}

{{/ifIsTheSame}}


