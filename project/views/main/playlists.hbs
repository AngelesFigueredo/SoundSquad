{{#ifEquals user._id id}}
<a href="/new-playlist">Crear nueva playlist</a>

{{#unless playlists}}
<p>No tienes ninguna playlist todav√≠a, crea la primera!</p>
{{/unless}}
{{/ifEquals}}

{{#if currentUserPlaylists}}
<h2>Tus playlists:</h2>
{{#each currentUserPlaylists}}
<a href="/playlist-details/{{this._id}}">{{>playlistPartial this}}</a>
{{/each}}
{{/if}}

{{#if otherUserPlaylists}}
<h2>Playlists de otros usuarios:</h2>
{{#each otherUserPlaylists}}
<a href="/playlist-details/{{this._id}}">{{>playlistPartial this}}</a>
{{/each}}
{{/if}}

<script>
const currentUserPlaylists = [];
const otherUserPlaylists = [];

{{#each playlists}}
  {{#ifEquals ../user._id author._id}}
    currentUserPlaylists.push(this);
  {{else}}
    otherUserPlaylists.push(this);
  {{/ifEquals}}
{{/each}}
</script>
