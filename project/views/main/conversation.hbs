<link rel="stylesheet" href="/stylesheets/general.css" />

<div class="container">
  {{#with conversation}}

    <div class="row">
      <div class="col">
        <p>Chat con {{../otherUser.username}} ðŸ’­</p>
      </div>
    </div>

  {{#each messages}}
    {{#if (isNewDay ../messages @index)}}

    <div class="row">
      <div class="col">
        <p><strong>{{getDate this.createdAt}}</strong></p>
      </div>
    </div>
    {{/if}}

    <div class="row">
      {{#if (ifEquals this.author.username ../../myUser.username) }}
        <div class="col my-message">
            <div><p>{{this.content}}</p></div>
            <div><p class="message-hour">{{getTime this.createdAt}}</p></div>
        </div>

      {{else}}
        <div class="col others-message">
          <div class="col-2">
            <div><img class="message-user-image" src="{{this.author.profileImg}}"></div>
          </div>
          <div class="col-2">
            <div class="others-message"><p>{{this.content}}</p></div>
            <div><p class="message-hour">{{getTime this.createdAt}}</p></div>
          </div>
        </div>
        {{/if}}
    </div>

  {{/each}}

  <form action="/new-message/{{../otherUser._id}}" method="POST">
    <input hidden name="conversation" value="{{this._id}}"/>
    <input hidden name="author" value="{{../currentUser._id}}"/>
    <input hidden name="to" value="{{../otherUser._id}}"/>

    <div>
      <label for="content">Mensaje:</label>
      <input required type="text" name="content" />
    </div>

    <br />

    <div><button class="link" type="submit">Enviar mensaje</button></div>
  </form>




    </div>
  {{/with}}
</div>
