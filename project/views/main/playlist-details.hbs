{{#with playlist}}
  <h2>{{this.title}}</h2>
  <h3>{{this.author.username}}</h3>

  {{#if (ne ../currentUser._id this.author._id)}}
  <a href="/follow-playlist/{{this._id}}">Seguir playlist</a>
  {{/if}}
{{/with}}
{{#each songs}}
  <div>
    <h4>{{this.name}}</h4>
    <p>{{this.album.name}}</p>
    <audio src="{{this.preview_url}}" controls></audio>
  </div>
{{/each}}