{{#if event}}
<div id="event-messages">
    {{#each event.messages}}
    <div class="card" style="width: 100%;">
        <div class="card-body">

            <h5 class="card-title">
                
                {{#if isYou}}
                You
                {{else}}
                <img src="{{author.profileImg}}" style="width: 80px;">
                {{author.username}}
                {{/if}}
            </h5>

            <h6 class="card-subtitle mb-2 text-muted">{{createdAt}}</h6>
            <p class="card-text">{{content}}</p>
        </div>
    </div>
    {{/each}}
</div>
<form id="message-form" method="post">

    <input type="text" name="content">
    <input type="text" name="author" value="{{session.currentUser._id}}" hidden>
    <input type="text" name="to" value="{{event._id}}" hidden>

    <button type="submit">Enviar</button>
</form>

{{/if}}
<script src="http://localhost:4000/socket.io/socket.io.js"></script>
<script src="/scripts/events/chat.js"></script>