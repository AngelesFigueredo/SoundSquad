{{#if event}}
<div id="event-messages" class="scroller">
    {{#if event.noMessagesYet}}
    <p class="text-center">
        Inicia la conversaci√≥n
    </p>
    {{/if}}
    {{#each event.messages}}
    <div class="d-flex justify-content-center time">
        <h6 class="card-subtitle mb-2 text-muted time">
            {{time}}
        </h6>
    </div>
            
        {{#if isYou}}
        <div class="row justify-content-end">
            <div class="you-message col-6">
                <p>{{content}}</p>
            </div>
        </div>
        {{else}}
        <div class="row">
            <div class="col-2 picture">
                <img src="{{author.profileImg}}">
            </div>
            <div class="col-8 wrapper">
                <div class="other-message">
                    <p>{{content}}</p>
                </div>
            </div>
        </div>
        {{/if}}
    
    {{/each}}
</div>
<form id="message-form" method="post">
    <div class="sender container">
        <div class="outline row justify-content-around">
            <div class="col-9 col-md-10">
                <input type="text" name="content" class="message-send">
            </div>
            <div class="col-2">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="remove-button-styling pr-0">SEND</button>
                </div>
            </div>

            <input type="text" name="author" value="{{session.currentUser._id}}" hidden>
            <input type="text" name="to" value="{{event._id}}" hidden>
            
        </div>
    </div>

</form>

{{/if}}
<script src="http://localhost:4000/socket.io/socket.io.js"></script>
<script src="/scripts/events/chat.js"></script>
