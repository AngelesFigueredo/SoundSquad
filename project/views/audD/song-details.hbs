<h1>Song details page</h1>

{{#if songDetails}}
    {{#with songDetails}}

    <h5>Song title: {{title}}</h5>
    <h5>Artista: {{artist}}</h5>
    <h5>Album: {{album}}</h5>

    <img src="{{spotify.album.images.[0].url}}" alt="">
    <form action="/concerts-audd" method="POST">
        <input type="text" name="artist" value="{{artist}}">
        <button type="submit">Ver futuros conciertos</button>
    </form>

