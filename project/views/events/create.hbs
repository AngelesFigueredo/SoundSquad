<link rel="stylesheet" href="/stylesheets/events.css" />

<form action="/create-event/{{concertId.concertId}}" method="POST">
    <div class="container padd">
        <div class="row justify-content-center">
            <div class="col col-md-6">
                <div class="one-liner padd-create">
                    <h2 >Nombre del evento</h2> 
                    <input type="text" name="name" required placeholder="Escribe aquí el nombre te tu evento"></input>
                </div>
                <div class="one-liner padd-create">
                        <h2>Descripción</h2>
                        <input type="text" name="description" required placeholder="Escribe aquí tu descripción"> </input>
                </div>
                <div class="padd padd-create">
                    <button class="purple-button"type="submit">Crea tu evento</button>
                </div>
            </div>
        </div>
    </div>
    <label>
        <input type="text" name="author" value="{{session.currentUser._id}}" hidden></input>
        <input type="text" name="admin" value="{{session.currentUser._id}}" hidden></input>
    </label>
    <input type="text" name="members" value="{{session.currentUser._id}}" hidden></input>
    <input type="text" name="concertApiId" value="{{concertId.concertId}}" hidden></input>
    <input type="text" id="key" value="{{apiKey}}" hidden>
    <input type="text" id="name" name="artist" hidden>
    <input type="text" id="date" name="date"hidden>
    <input type="text" id="place" name="place" hidden>
    <input type="text" id="apiId" hidden value="{{concertId.concertId}}" hidden>


</form>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/scripts/events/dateFormatter.js"></script>
<script src="/scripts/events/create-event.js"></script>


